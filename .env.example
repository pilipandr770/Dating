# ===========================================
# LoveMatch Dating Platform - Configuration
# Copy this file to .env and fill in your values
# ===========================================

# ===== ENVIRONMENT =====
NODE_ENV=development
FLASK_ENV=development

# ===== BACKEND =====
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# ===== DATABASE =====
DATABASE_URL=postgresql://user:password@localhost:5432/dating_db
DATABASE_SCHEMA=dating

# ===== STRIPE PAYMENTS =====
# Backend (Secret Key) - get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Frontend (Publishable Key)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_key_here

# ===== OPENAI =====
OPENAI_API_KEY=sk-your-openai-key-here

# ===== API URLS =====
VITE_API_URL=http://localhost:5000/api
BACKEND_PORT=5000
FRONTEND_PORT=3000

# ===== REDIS (Optional) =====
SOCKETIO_MESSAGE_QUEUE=redis://localhost:6379
